@model CoverType                               // _26

<form method="post" asp-action="Edit">
    <div class="border border-info p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Products</h2>
            <hr />
        </div>
        @* <div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>  @*validations *@
        </div>
        
        <button type="submit" class="btn btn-success" style="width:150px">Update</button>
        <a asp-controller="CoverType" asp-action="Index" class="btn btn-warning" style="width:150px">
            Back To List
        </a>

    </div>

</form>

@section Scripts{
    @*for Client side validation *@
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
