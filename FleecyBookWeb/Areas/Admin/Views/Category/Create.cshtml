@model Category                               // _18

<form method="post">
    <div class="border border-info p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr />
        </div>
        @* <div asp-validation-summary="All"></div>*@  @*to show all the errors on top of page _21 *@
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>  @* validations _20 *@
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success" style="width:150px">Create</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-warning" style="width:150px">
            Back To List
        </a>

    </div>

</form>

@section Scripts{
                                                     @*for Client side validation _23*@
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

