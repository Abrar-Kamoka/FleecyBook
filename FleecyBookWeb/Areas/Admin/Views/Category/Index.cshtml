@model IEnumerable<Category>                                       //_9
@{
    ViewData["Title"] = "Index";
}

        @*Styling the form _15 *@
<div class="container p-4">
    <div class="row p-3">
        <div class="col-6 text-start">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-outline-warning">
                <i class="bi bi-plus-circle-dotted"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>
    <br /> <br />

    <table class=" table table-hover table-bordered table-striped table-responsive" style="width:100%">
     @* _10*@
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
                <th>
                    Date/Time
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)           @* you can use HTML & C# both, cuz using Razor Pages *@
            {
                <tr>
                    <td width="33%">
                        @obj.Name
                    </td>
                    <td width="33%">
                        @obj.DisplayOrder
                    </td>
                    <td width="33%">
                        @obj.CreatedDate
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                                                                  @* _27 *@
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-outline-primary">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>                                     @* _30 *@
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger">
                            <i class="bi bi-shield-x"></i> Delete
                        </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>